<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
                android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alvin and the Chipmunks"
        android:id="@+id/bandName"
        android:textColor="#f2c001"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bandImage"
        android:src="@drawable/alvin_and_the_chipmunks_band"
        android:layout_marginTop="129dp"
        android:layout_below="@+id/bandName"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alvinButton"
        android:layout_below="@+id/bandName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discographyButton"
        android:layout_below="@+id/bandName"
        android:layout_alignRight="@+id/bandImage"
        android:layout_alignEnd="@+id/bandImage"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/simonButton"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_alignTop="@+id/alvinButton"
        android:layout_toRightOf="@+id/alvinButton"
        android:layout_toEndOf="@+id/alvinButton"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theodoreButton"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:layout_alignTop="@+id/discographyButton"
        android:layout_toLeftOf="@+id/discographyButton"
        android:layout_toStartOf="@+id/discographyButton"/>

</RelativeLayout>
